@model BSNCapstone.Models.UserProfile
@{
    ViewBag.Title = "EditProfile";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <!-------------------Cover & avatar------------------------->

    <div class="col-md-12 avatar-cover" style="padding:0; height: 410px;">
        <img class="cover-img" src="AnhCoverSach/coversach2.jpg">
        <div class="change-cover">
            <button class="change-cover-button"><i class="glyphicon glyphicon-camera"></i><span> Thay đổi ảnh bìa</span></button>
        </div>
        <div class="row">
            <div class="avatar col-md-4">
                <img class="avatar-img" src="/AnhAvaNguoiDung/avaHai.jpg">
                <div class="change-avatar">
                    <button class="change-avatar-button"><i class="glyphicon glyphicon-camera"></i><span> Thay đổi ảnh cá nhân</span></button>
                </div>
            </div>
            <div class="cover-interaction">
                <button class="button buttonRe">Tin nhắn</button>
                <button class="button buttonRe">Theo dõi </button>
                <button class="button buttonRe" data-toggle="modal" data-target="#ModalReport">Báo cáo</button>
                <!---------------Báo cáo -------------------------------------->
                <div id="ModalReport" class="modal fade" role="dialog">
                    <div class="modal-dialog ">
                        <!-- Modal content-->
                        <div class="modal-content ">
                            <div style="background-color: #F7E8AF;" class="modal-header clearfix">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4 class="modal-title"><b>Giúp chúng tôi hiểu điều đang xảy ra</b></h4>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-body clearfix">
                                <div class="content">
                                    <div class="row">
                                        <div class="col-md-1" style="margin-top: 5px;">
                                            <img src="/AnhAvaNguoiDung/avaVan.jpg" style="width:50px;height:50px" />
                                        </div>
                                        <div class="col-md-11" class="radio">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio"> Người này đang làm phiền tôi
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio">Họ đang mạo danh tôi hoặc người mà tôi biết
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio">Họ đang chia sẻ bài viết không phù hợp hoặc phản cảm
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio">Đây là tài khoản giả mạo
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio">Trang cá nhân này đại diện cho một doanh nghiệp hoặc tổ chức
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio">Họ đang sử dụng tên khác so với thực tế
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="optradio">
                                                    <input type="text" id="Othercomment" class="form-control" placeholder="Ý kiến khác">
                                                </label>
                                            </div>
                                            <div class="divider-horizontal"></div>
                                            <button id="buttonCancel" class="btn btn-default">Hủy</button>
                                            <button id="buttonPost" class="btn btn-default">Gửi</button>

                                        </div>
                                    </div>


                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <!--------------- /Báo cáo -------------------------------------->
            </div>
        </div>
    </div>
    <!-----------------------UNDER cover & ava--------------------------------->
    <div class="tencanhan"><a href="#"><b>Ten Ca Nhan</b></a></div>
    <div class="col-ms-12">
        <!------------LEFT SIDE--------------->
        <div class="col-md-2 col-sm-4 col-xs-12 sidenav">
            <div class="text-center" class="panel-heading">
                <h4><strong>THEO DÕI</strong></h4>
            </div>
            <br>
            <div class="row">
                <div class="col-md-6 " style="padding-left:5px;">
                    <img src="/Anhtacgia/James%20Patterson_tacgia.jpg" class="img-rounded" alt="" width="90" height="117">
                    <ul class="list-group">
                        <li>
                            <span>
                                <i data-toggle="tooltip" title="James Patterson " id="tacgia"><strong>James Patterson </strong> </i>
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6" style="padding-left:5px;">
                    <img src="/Anhtacgia/Jeff%20Kinney_tacgia.jpg" class="img-rounded" alt="" width="90" height="117">
                    <ul class="list-group">
                        <li>
                            <span>
                                <i data-toggle="tooltip" title="Jeff Kinney" id="tacgia"><strong>Jeff Kinney </strong> </i>
                            </span>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <!--CENTER-->
        <div class="container col-md-6">
            <div class="userInfor">
                <h2>Thông tin cá nhân</h2>
                <div class="divider-horizontal"></div>
                <br>
                <div class="col-md-12">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="thumbnail" style="height: 300px;">
                                <img src="Anhtacgia/nguy%E1%BB%85n%20nh%E1%BA%ADt%20%C3%A1nh_tacgia.jpg" alt="">
                                <div class="caption">
                                    <a href="#">Nguyễn Nhật Ánh</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, new { @class = "col-sm-5 control-label" })
                                @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Họ tên", @class = "form-control", @id = "name", @style = "width: 55%;" })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="col-sm-5 control-label">Giới tính</label>
                                <label class="radio-inline" style="margin-left:30px;">
                                    <input type="radio" name="gender" id="male" value="1"> Nam
                                </label>
                                <label class="radio-inline" style="margin-left:30px;">
                                    <input type="radio" name="gender" id="female" value="2"> Nữ
                                </label>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DOB, new { @class = "col-sm-5 control-label" })
                                @Html.TextBoxFor(model => model.DOB, new { @placeholder = "Ngày sinh", @class = "form-control", @style = "width: 55%;" })
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Address, new { @class = "col-sm-5 control-label" })
                                @Html.TextBoxFor(model => model.Address, new { @placeholder = "Địa chỉ", @class = "form-control", @style = "width: 55%;" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-inline" style="position:relative;left:50%;margin-top:20px;">
                                <button type="submit" class="btn btn-default">Sửa</button>
                                <button type="submit" class="btn btn-info">Lưu</button>
                            </div>
                        </form>   
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--  RIGHT SIDE -->
        <div class="col-md-4 col-sm-4 col-xs-12 sidenav">
            <div class="text-center" class="panel-heading">
                <h4><strong>ĐÁNH GIÁ VÀ ĐỌC GẦN ĐÂY</strong></h4>
            </div>
            <br>
            <br>
            <!--  Bắt đầu phần ĐÁNH GIÁ VÀ ĐỌC GẦN ĐÂY -->
            <div class="row">
                <div class="col-md-6" style="padding-left:5px;">
                    <!--VÒNG FOR BẮT ĐẦU TỪ DIV NÀY-->
                    <div class="col-md-6" style="padding-left:0px;">
                        <img src="/Anhsach/nhagiakim.jpg" class="img-rounded" width="100" height="130">
                    </div>
                    <fieldset class="rating" style="padding-left:px;">
                        <input type="radio" id="star5" name="rating" value="5" />
                        <label class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4" />
                        <label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3" />
                        <label class="full" for="star3" title="Meh - 3 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2" />
                        <label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1" />
                        <label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    </fieldset>
                    <h5 style="float:right;">345 đánh giá</h5>
                    <br>
                    <br>
                    <button class="button buttonRe" style="margin-left:15px;">Nhận xét</button>
                    <div class="col-md-12 list-group">
                        <span>
                            <strong data-toggle="tooltip" title="NHÀ GIẢ KIM">NHÀ GIẢ KIM</strong>
                            <br><i data-toggle="tooltip" title="Paulo Coelho" class="authorname"><strong>Paulo Coelho </strong> </i>
                        </span>
                    </div>
                </div>
                <div class="col-md-6" style="padding-left:5px;">
                    <div class="col-md-6" style="padding-left:0px;">
                        <img src="/Anhsach/ngayxuacomotchuyentinh.jpg" class="img-rounded" width="100" height="130">
                    </div>
                    <fieldset class="rating">
                        <input type="radio" id="star5" name="rating" value="5" />
                        <label class="full" for="star5" title="Awesome - 5 stars"></label>
                        <input type="radio" id="star4" name="rating" value="4" />
                        <label class="full" for="star4" title="Pretty good - 4 stars"></label>
                        <input type="radio" id="star3" name="rating" value="3" />
                        <label class="full" for="star3" title="Meh - 3 stars"></label>
                        <input type="radio" id="star2" name="rating" value="2" />
                        <label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                        <input type="radio" id="star1" name="rating" value="1" />
                        <label class="full" for="star1" title="Sucks big time - 1 star"></label>
                    </fieldset>
                    <h5 style="float:right;">345 đánh giá</h5>
                    <br>
                    <br>
                    <button class="button buttonRe" style="margin-left:15px;">Nhận xét</button>
                    <div class="col-md-12 list-group">
                        <span>
                            <strong data-toggle="tooltip" title="NGÀY XƯA CÓ MỘT CHUYỆN TÌNH">NGÀY XƯA CÓ MỘT CHUYỆN TÌNH</strong>
                            <br><i data-toggle="tooltip" title="Nguyễn Nhật Ánh" class="authorname"><strong>Nguyễn Nhật Ánh </strong> </i>
                        </span>
                    </div>
                </div>
            </div>
            <br>
        </div>
    </div>
    <!-- Kết thúc ------------- -->
</body>

</html>
@section scripts {
    <link rel="stylesheet" href="~/Content/Trangcaidat.css">
}