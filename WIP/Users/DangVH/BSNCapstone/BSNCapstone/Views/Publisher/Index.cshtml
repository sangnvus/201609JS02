                            @foreach (BSNCapstone.Models.Publisher publisher in @Model.Publishers)
                            {
                                <tr id=@i>
                                    <td style="vertical-align: middle">@i</td>
                                    <td>
                                        @Model.Cloudinary.Api.UrlImgUp.Format("jpg").Transform(new CloudinaryDotNet.Transformation()
