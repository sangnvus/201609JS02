        <!------BÊN PHẢI------>
        <div class="col-md-10">

            <div class="box">
                <div class="box-icon">
                    <span class="fa fa-book fa-4x"></span>
                </div>
                <div class="info">
                    <h4 class="text-center">Tổng số sách</h4>
                    <p>1234</p>
                </div>
            </div>

            <div class="slide-tab">
                <div class="form-inline">
                    <label>Danh sách Sách</label>
                    <div class="form-group add">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Thêm sách</button>
                        <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Tìm kiếm..." />
                    </div>
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                            <!---Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Thêm sách và thể loại</h4>

                                </div>
                                <div class="midle-modal">
                                    <div class="row content col-xs-6 form-area" style="margin-top:10px;">
                                        <h4><b>Thêm sách</b></h4>
                                        <form role="form">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="bookname" name="bookname" placeholder="Tựa sách" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="author" name="author" placeholder="Tác giả" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="date" class="form-control" id="date" name="date" placeholder="Ngày xuất bản" required>
                                            </div>
                                            <div class="form-group">
                                                <select class="form-control" autofocus required>
                                                    <option value="Choose the publisher">Chọn nhà xuất bản</option>
                                                    <option value="NXB Trẻ">NXB Trẻ</option>
                                                    <option value="NXB Hà Nội">NXB Hà Nội</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <select class="form-control" autofocus required>
                                                    <option value="Choose the category">Chọn thể loại</option>
                                                    <option value="Trinh thám">Trinh thám</option>
                                                    <option value="Lãng mạn">Lãng mạn</option>
                                                </select>
                                            </div>
                                            <button type="button" id="submit" name="submit" class="btn btn-primary pull-right">Thêm</button>
                                        </form>
                                    </div>

                                    <div class="row content col-xs-6 form-area" style="margin-top:10px;">
                                        <h4><b>Thêm thể loại</b></h4>
                                        <form role="form">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="categoryname" name="categoryname" placeholder="Tên thể loại" required>
                                            </div>
                                            <button type="button" id="submit" name="submit" class="btn btn-primary pull-right">Thêm</button>
                                        </form>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="divider-horizontal"></div>
                <div class="table">
                    <table class="table table-striped table-bordered table-hover" id="dev-table">
                        <thead>
                            <tr>
                                <th style="width:1px">#</th>
                                <th style="width:250px">Tên sách</th>
                                <th>Tác giả</th>
                                <th style="width:200px">Thể loại</th>
                                <th style="width:130px">Ngày xuất bản</th>
                                <th style="width:130px">Hành động</th>
                            </tr>
